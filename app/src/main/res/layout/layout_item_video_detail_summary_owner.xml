<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/white"
              android:padding="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.seaword.cn.widget.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/ic_user_yoyiyi"
            app:border_color="@color/white"
            app:border_width="1dp"/>

        <RelativeLayout
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_alignTop="@+id/iv_avatar"
            android:layout_alignBottom="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sssss"
                android:textColor="@color/black_80"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/tv_time"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxx"
                android:textColor="@color/black_alpha_30"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/tv_electricize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_tv_electricize"
                android:paddingBottom="3dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="3dp"
                android:text="充电"
                android:textColor="@color/white"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/tv_favourite"
                android:layout_toLeftOf="@+id/tv_electricize"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tv_favourite"
                android:paddingBottom="3dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="3dp"
                android:text="关注"
                android:textColor="@color/pink_text_color"
                android:textSize="16sp"/>


        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/v_hor"
        android:layout_width="348dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/line_bg"/>



</LinearLayout>