<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:padding="10dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_80"
        android:text="222222"
        android:textSize="14sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_video_play_num"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/common_ic_video_views"
            android:tint="@color/gray"
            />

        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_video_play_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="xx"
            android:textColor="@color/black_alpha_45"
            android:textSize="12sp"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_video_danmaku"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/common_ic_video_danmakus"
            android:tint="@color/gray"/>


        <Space
            android:layout_width="5dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_video_danmaku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_alpha_45"
            android:text="xxx"
            android:textSize="12sp"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="xxxxdddddddddddd"
        android:textColor="@color/black_alpha_45"
        android:textSize="12sp"/>

    <View
        android:id="@+id/v_hor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/line_bg"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_share"
            android:text="ddd"
            android:drawableLeft="@mipmap/ic_share_green"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_coin"
            android:text="ddd"
            android:drawableLeft="@mipmap/ic_coin"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_favourite"
            android:text="ddd"
            android:drawableLeft="@mipmap/ic_collect"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_down"
            android:text="ddd"
            android:drawableLeft="@mipmap/ic_header_activity_center"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>