<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="120dp">


        <ImageView
            android:id="@+id/iv_video_preview"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"/>


        <RelativeLayout
            android:layout_toRightOf="@+id/iv_video_preview"
            android:layout_alignTop="@+id/iv_video_preview"
            android:layout_alignBottom="@+id/iv_video_preview"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="sssss"
                android:maxLines="3"
                android:minLines="2"
                android:textColor="@color/font_normal"
                android:textSize="14sp"/>

            <LinearLayout
                android:id="@+id/part3"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_video_play_num"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/common_ic_video_views"
                    android:tint="@color/gray"
                    />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tv_video_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:text="xx"
                    android:textColor="@color/black_alpha_45"
                    android:textSize="12sp"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/iv_video_danmaku"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/common_ic_video_danmakus"
                    android:tint="@color/gray"/>


                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tv_video_danmaku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_alpha_45"
                    android:text="xxx"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_above="@+id/part3"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_video_up"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/ic_up"
                    android:tint="@color/gray"
                    />

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tv_video_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:text="xx"
                    android:textColor="@color/black_alpha_45"
                    android:textSize="12sp"/>


            </LinearLayout>



        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>