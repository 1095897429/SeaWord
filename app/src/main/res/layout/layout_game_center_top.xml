<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:orientation="vertical"
     android:background="@color/white"
     android:layout_width="match_parent"
     android:paddingLeft="10dp"
     android:paddingTop="6dp"
     android:paddingBottom="6dp"
     android:layout_height="48dp">

    <com.seaword.cn.widget.CircleImageView
        android:id="@+id/toolbar_user_avatar"
        android:src="@mipmap/ic_user_yoyiyi"
        app:border_color="@color/colorPrimary"
        app:border_width="1dp"
        android:layout_width="36dp"
        android:layout_height="36dp"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="soleil雪寂"
        android:layout_marginStart="8dp"
        android:textColor="@color/font_normal"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/toolbar_user_avatar"
        app:layout_constraintLeft_toRightOf="@+id/toolbar_user_avatar"
        />
    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新的风暴已经出现,你准备好了吗?"
        android:layout_marginStart="8dp"
        android:textColor="@color/black_alpha_30"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/toolbar_user_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_user_avatar"/>


</android.support.constraint.ConstraintLayout>